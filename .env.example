# Application Configuration
APP_NAME=CCAM-AI-Blockchain
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://ccam_user:ccam_password@localhost:5432/ccam_db
DATABASE_TEST_URL=postgresql://ccam_user:ccam_password@localhost:5432/ccam_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Message Queue Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
KAFKA_BROKERS=localhost:9092

# Blockchain Configuration
BLOCKCHAIN_NETWORK=hardhat
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
CONTRACT_ADDRESS=

# AI/LLM Configuration
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
OAUTH2_REDIRECT_URI=http://localhost:3000/auth/callback

# CCAM Reference Configuration
CCAM_API_URL=https://api.ameli.fr/ccam
CCAM_SYNC_INTERVAL=86400  # 24 hours in seconds
CCAM_VERSION=2024

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Storage Configuration
STORAGE_TYPE=local  # local, s3, azure
STORAGE_PATH=./uploads
S3_BUCKET_NAME=ccam-uploads
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# Feature Flags
ENABLE_SHADOW_MODE=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_BLOCKCHAIN_AUDIT=true
ENABLE_OVERRIDE_TRACKING=true